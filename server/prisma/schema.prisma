// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ServiceType {
  SPOTIFY
  GITHUB
  GOOGLE
  DISCORD
  MICROSOFT
  TWITCH
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  password    String
  randomToken String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  areas       Area[]
  services    Services[]

  @@map("users")
}

model Area {
  id         Int      @id @default(autoincrement())
  userId     Int      @unique
  name       String
  actionId   Int      @unique
  reactionId Int      @unique
  user       User     @relation(fields: [userId], references: [id])
  Action     Action   @relation(fields: [actionId], references: [id])
  Reaction   Reaction @relation(fields: [reactionId], references: [id])
  @@map("area")
}

model Action {
  id                  Int      @id @default(autoincrement())
  name                String
  stringParameter     String?
  serviceId           Int      @unique
  area                Area[]
  Services            Services @relation("Actionlink", fields: [serviceId], references: [id])
  @@map("action")
}

model Reaction {
  id                  Int      @id @default(autoincrement())
  name                String
  stringParameter     String?
  serviceId           Int      @unique
  area                Area[]
  Services            Services @relation("Reactionlink", fields: [serviceId], references: [id])
  @@map("reaction")
}

model Services {
  id          Int         @id @default(autoincrement())
  userId      Int         @unique
  token       String      @unique
  refreshToken String?
  typeService ServiceType
  user        User        @relation(fields: [userId], references: [id])
  action      Action[]    @relation("Actionlink")
  reaction    Reaction[]  @relation("Reactionlink")

  @@map("services")
}
